<?xml version="1.0" encoding="UTF-8"?>
<CPackWiXPatch>
  <CPackWiXFragment Id="CM_CP_aVPN.exe">
    <DirectoryRef Id="INSTALL_ROOT">
      <Directory Id="DesktopFolder" Name="Desktop" />
    </DirectoryRef>
    <DirectoryRef Id="CM_DP_bin">
      <Component Id="CM_SHORTCUT_DESKTOP" Guid="*">
        <Shortcut Id="CM_SP_bin.avpn.exe_desktop"
                  Name="aVPN"
                  Description="aVPN VPN Client"
                  Target="[#CM_FP_bin.avpn.exe]"
                  WorkingDirectory="CM_DP_bin"
                  Directory="DesktopFolder" />
        <RegistryValue Root="HKCU" 
                      Key="Software\aVPN Team\aVPN" 
                      Name="DesktopShortcut" 
                      Type="integer" 
                      Value="1" 
                      KeyPath="yes"/>
        <RemoveFolder Id="DesktopFolder" On="uninstall"/>
      </Component>
    </DirectoryRef>
  </CPackWiXFragment>
  <CPackWiXFragment Id="#PRODUCTFEATURE">
    <ComponentRef Id="CM_SHORTCUT_DESKTOP"/>
  </CPackWiXFragment>
</CPackWiXPatch>
